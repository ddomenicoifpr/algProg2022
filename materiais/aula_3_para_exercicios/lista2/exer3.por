algoritmo
declare i, X, Y, Z numerico
para i <- 1 ate 7 faca
inicio
	escreva "Conta ", i
	escreva "Informe o valor de X: "
	leia X
	
	escreva "Informe o valor de Y: "
	leia Y
	
	escreva "Informe o valor de Z: "
	leia Z
	escreva "X + Y + Z = ", X + Y + Z
	escreva "" //Linha em branco
fim
fim_algoritmo
